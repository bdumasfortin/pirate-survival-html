{
  "name": "pirate-survival-server",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/server.cjs && node --input-type=module -e \"import fs from 'node:fs'; fs.mkdirSync('dist', { recursive: true }); fs.copyFileSync('dist/server.cjs', 'dist/server.js'); fs.copyFileSync('README_DIST.md', 'dist/README.md'); fs.writeFileSync('dist/package.json', JSON.stringify({ type: 'commonjs' }, null, 2) + '\\n');\"",
    "start": "node dist/index.js",
    "start:bundle": "node dist/server.cjs",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "esbuild": "^0.21.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.7.2",
    "typescript": "^4.9.5"
  }
}
